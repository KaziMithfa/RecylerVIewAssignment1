<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_foreground"
        android:scaleType="fitCenter"

        />

    <TextView
        android:id="@+id/userNameTextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Name : "
        android:textSize="14sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:layout_marginTop="20dp"

        />

    <TextView
        android:id="@+id/userPhoneTextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Phone : "
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:maxLines="1"

        />

    <TextView
        android:id="@+id/userVillageTextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Village : "
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:maxLines="1"

        />
    <TextView
        android:id="@+id/userPostOfficeTextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User PostOffice : "
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:maxLines="1"

        />

    <TextView
        android:id="@+id/userDistrictTextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User District : "
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:maxLines="1"

        />

    <TextView
        android:id="@+id/userDivisionTextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Division : "
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:maxLines="1"

        />

    <TextView
        android:id="@+id/userCountryTextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Country  : "
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:maxLines="1"

        />

    <Button
        android:id="@+id/closeanccancelBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Close and cancel"
        android:textSize="17sp"
        android:textStyle="bold"

        />


</LinearLayout>